{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",       
    "module": "commonjs",            
    "outDir": "./dist",            
    "esModuleInterop": true,      
    "strict": true,                 
    "skipLibCheck": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "noFallthroughCasesInSwitch": false
  }
}
